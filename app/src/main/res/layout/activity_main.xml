<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="right"
        android:textSize="50pt"
        android:inputType="textPersonName"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/buC"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                 android:text="C"
                android:background="@color/gray_light"

        ></Button>
            <Button
                android:id="@+id/buPlusMinus"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="+/-"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buPercent"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="%"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="รท"
                android:background="@color/gray_light"

                ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/buSeven"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="7"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buEight"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="8"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buNine"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="9"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buMultiply"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="*"
                android:background="@color/gray_light"

                ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/buFour"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="4"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buFive"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="5"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buSix"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="6"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buMinus"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="-"
                android:background="@color/gray_light"

                ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/buOne"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="1"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buTwo"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="2"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buThree"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="3"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buPlus"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="+"
                android:background="@color/gray_light"

                ></Button>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/buZero"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="2"
                android:text="0"
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buDecimal"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="."
                android:background="@color/gray_light"

                ></Button>
            <Button
                android:id="@+id/buEqualsTo"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:text="="
                android:background="@color/gray_light"

                ></Button>


        </TableRow>

    </TableLayout>


</LinearLayout>